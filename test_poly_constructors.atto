(* Test polymorphic constructors *)
datatype 'a option = None | Some of 'a

(* Test that Some works with different types *)
let intOpt = Some 42 in
let strOpt = Some "hello" in
let boolOpt = Some true in

(* Test pattern matching *)
let getInt = case intOpt of
    None -> 0
  | Some x -> x
in

let getStr = case strOpt of
    None -> "default"
  | Some x -> x
in

(* Test None constructor *)
let noneInt = None in
let noneStr = None in

(getInt, getStr)
